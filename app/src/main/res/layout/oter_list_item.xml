<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/card_view"
    android:layout_gravity="center"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="6dp"
    card_view:cardBackgroundColor="@color/semiTransparent"
    card_view:cardCornerRadius="4dp"
    card_view:elevation="2dp"
    card_view:pressedTranslationZ="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/oter_item_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="24sp"
            android:textColor="@android:color/black"
            android:padding="8dp"
            android:gravity="center"/>

        <TextView
            android:id="@+id/oter_item_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/primary"
            android:textColor="@android:color/white"
            android:paddingTop="24dp"
            android:paddingBottom="32dp"
            android:paddingRight="8dp"
            android:paddingLeft="8dp"
            android:textSize="32sp"
            android:gravity="center"
            />

        <TextView
            android:id="@+id/oter_item_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@android:color/black"
            android:padding="8dp"
            android:textSize="18sp"
            android:gravity="center"/>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/oter_item_contact_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="vertical">

        </android.support.v7.widget.RecyclerView>

    </LinearLayout>


</android.support.v7.widget.CardView>